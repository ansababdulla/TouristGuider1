@model IEnumerable<TouristGuider.Models.Hotel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HtlNm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HtlLctn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credential.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HtlNm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HtlLctn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Credential.Email)
        </td>
        <td>
            @Html.ActionLink("Book Rooms","ViewRoom","Rooms",new { id = item.HtlID},null)
        </td>
    </tr>
}

</table>
