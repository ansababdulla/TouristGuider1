<section class="cart_area section_padding">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">NoofDays</th>
                            <th scope="col">Checkin Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    <div class="media">
                                        <div class="d-flex">
                                            <img src="assets/img/arrivel/arrivel_1.png" alt="">
                                        </div>
                                        <div class="media-body">
                                            <p><img src="@item.Car.CarImg" alt="" width="100" height="100"></p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h5>@item.Car.CarRt</h5>
                                </td>
                                <td>
                                    <div class="product_count">
                                     <input type="text" value="1" min="0" max="10" title="Quantity:"
                                      class="input-text qty input-number" />
                                    <button
                                      class="increase input-number-increment items-count" type="button">
                                      <i class="ti-angle-up"></i>
                                    </button>
                                    <button
                                      class="reduced input-number-decrement items-count" type="button">
                                      <i class="ti-angle-down"></i>
                                    </button> 
                                    <span class="input-number-decrement"> <i class="ti-minus"></i></span>
                                            <input class="input-number" type="text" value="@item.NoofDays" min="1" max="10">
                                            <span class="input-number-increment"> <i class="ti-plus"></i></span>
                                        </div>
                                </td>
                                <td>
                                    <h5>@item.DateBooked</h5>

                                </td>

                            </tr>

                        }
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <h5>Subtotal</h5>
                            </td>
                            <td>
                                @foreach (var item in Model)
                                {
                                    if (item.TtlRt != 0)
                                    {
                                        <h5>@item.TtlRt</h5>

                                    }
                                }
                            </td>
                        </tr>

